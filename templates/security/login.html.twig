{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="flash-container">
                <div class="flash-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            </div>
        {% endif %}


        <h2 class="h3 mb-3 font-weight-normal">Please sign in</h2>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
               autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
               required>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
               value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <input type="checkbox" name="_remember_me" id="_remember_me">
            <label for="_remember_me">Remember me</label>
        </div>

        {% if app.user %}
            You are logged in as {{ app.user.userIdentifier }}<br>
            <button class="btn btn-lg btn-primary" type="submit"
                    onclick="window.location.href='{{ path('app_logout') }}'">
                Logout
            </button>
        {% endif %}



        {% if not app.user %}
            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
            <button class="btn btn-lg btn-primary" type="submit"
                    onclick="window.location.href='{{ path('app_register') }}'">
                Register
            </button><br><br>
            <a href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
        {% endif %}
    </form>
{% endblock %}
